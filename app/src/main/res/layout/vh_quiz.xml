<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:clickable="true"
                                    android:elevation="2dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/quiz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/quiz_check"
            android:layout_toStartOf="@+id/quiz_check"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorAccentLight"
            tools:text="Tu peux pas test"/>

        <TextView
            android:id="@+id/quiz_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_name"
            android:layout_toLeftOf="@+id/quiz_check"
            android:layout_toStartOf="@+id/quiz_check"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/light_gray"
            tools:text="Tu peux pas test"/>

        <CheckBox
            android:id="@+id/quiz_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:buttonTint="@color/lighter_gray"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>